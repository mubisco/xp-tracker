{
  "type": "project",
  "license": "proprietary",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "doctrine/doctrine-bundle": "^2.11",
    "doctrine/doctrine-migrations-bundle": "^3.3",
    "doctrine/orm": "^2.17",
    "jms/serializer-bundle": "*",
    "symfony/console": "7.0.*",
    "symfony/doctrine-messenger": "7.0.*",
    "symfony/dotenv": "7.0.*",
    "symfony/flex": "^2",
    "symfony/framework-bundle": "7.0.*",
    "symfony/messenger": "7.0.*",
    "symfony/monolog-bundle": "^3.10",
    "symfony/runtime": "7.0.*",
    "symfony/uid": "7.0.*",
    "symfony/yaml": "7.0.*"
  },
  "require-dev": {
    "behat/behat": "^3.14",
    "friends-of-behat/symfony-extension": "^2.5",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpstan/phpstan-symfony": "^1.3",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.8",
    "symfony/browser-kit": "7.0.*",
    "symfony/css-selector": "7.0.*",
    "symfony/phpunit-bridge": "^7.0"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "symfony/flex": true,
      "symfony/runtime": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "XpTracker\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "XpTracker\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*",
    "symfony/polyfill-php82": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "unit": [
      "bin/phpunit --testsuite Unit"
    ],
    "testdb-reset": [
      "php bin/console doctrine:migrations:migrate first --env=test -n",
      "php bin/console doctrine:migrations:migrate --env=test -n",
      "php bin/console cache:clear --env=test"
    ],
    "behat": [
      "php bin/console doctrine:migrations:migrate first --env=test -n",
      "php bin/console doctrine:migrations:migrate --env=test -n",
      "php bin/console cache:clear --env=test",
      "vendor/bin/behat --append-snippets"
    ],
    "phpstan": [
      "vendor/bin/phpstan -cphpstan.neon"
    ],
    "phpstan-update": [
      "vendor/bin/phpstan -cphpstan.neon -bphpstan-baseline.neon"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "7.0.*"
    }
  }
}
